{
  "name": "@bluejay/schema",
  "description": "Typed, programmatic JSON schemas.",
  "version": "3.0.0-beta.0",
  "license": "MIT",
  "author": "Sylvain Estevez",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "docs": "./node_modules/.bin/typedoc --out docs --mode file --excludePrivate --excludeExternals ./src/index.ts",
    "test": "mocha",
    "cov": "nyc mocha",
    "lint": "tslint --project ./",
    "fix": "tslint --fix --project ./",
    "compile": "tsc",
    "build": "rm -rf dist && mkdir dist && tsc --noEmit false",
    "prepare": "tsc",
    "prepublishOnly": "npm run lint && npm run cov && npm run build",
    "travis": "tsc && npm run lint && npm run cov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluebirds-blue-jay/schema.git"
  },
  "bugs": {
    "url": "https://github.com/bluebirds-blue-jay/schema/issues"
  },
  "homepage": "https://github.com/bluebirds-blue-jay/schema#readme",
  "dependencies": {
    "@bluejay/utils": "4.0.0-beta.2",
    "@types/ajv": "^1.0.0",
    "ajv": "6.12.3",
    "lodash": "4.17.20"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "5.2.3",
    "@types/node": "12.7.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "15.1.0",
    "ts-node": "^9.0.0",
    "tslint": "6.1.3",
    "typedoc": "0.15.0",
    "typescript": "^4.0.2"
  }
}
